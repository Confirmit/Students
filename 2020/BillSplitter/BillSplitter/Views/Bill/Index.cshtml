@model List<Bill>

<p> Your own bills </p>

<a asp-action="Create" asp-route-userId="@ViewData["userId"]">Create empty bill</a>

<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var bill in Model)
    {
        <tr>
            <td>@bill.Name</td>
            <td>
                <a asp-action="Manage" asp-route-userId="@bill.UserId" asp-route-billId="@bill.Id">Manage</a> |
                <a asp-action="Delete" asp-route-userId="@bill.UserId" asp-route-billId="@bill.Id">Delete</a> |
                Edit choice
            </td>
        </tr>
    }
    </tbody>
</table>
