@using BillSplitter.Models.InteractionLevel
@model List<Position>

<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var position in Model)
    {
        <tr>
            @await Html.PartialAsync("PositionPartial", position.ToInteractionLevelPosition(), ViewData)
        </tr>
    }
    </tbody>
</table>
@Html.ActionLink("Create New Position", "Create",new {billId=ViewData["BillId"]})
