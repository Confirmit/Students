@model List<Position>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var position in Model)
        {
            <tr>
                @await Html.PartialAsync("PositionInfoActionsPartial", position, ViewData)
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("CreatePartial", new Position(), ViewData)

@Html.ActionLink("Choose your positions", "Index", new
{
    billId = ViewData["billId"], select=true
}, new {@class = "btn btn-primary"})
<script>
    function submitUpdatePosition(formName) {
        var updateForm = document.getElementById(formName);
        updateForm.submit();
    }
</script>