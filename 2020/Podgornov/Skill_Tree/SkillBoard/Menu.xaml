<Page x:Class="SkillBoard.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SkillBoard"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="DarkGray"
      Title="Menu">
    <Grid>
        <TextBox x:Name="textbox" PreviewTextInput="TextboxKeyDown" MinHeight="65" MinWidth="300" Width="300" Height="65" FontSize="18" FontFamily="Comic Sans MS" Background="#FFCDCDBC" Margin="305,19,195,366" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <ListBox x:Name="listbox" ScrollViewer.VerticalScrollBarVisibility="Visible"  Background="#FF7E7777" Margin="315,125,55,25" FontSize="18" FontFamily="Comic Sans MS"/>
        <Button Content="My courses"  Click="ChangeToMyCurses" HorizontalAlignment="Left" VerticalAlignment="Top" Width="95" Margin="315,95,0,0" Height="25" FontSize="18"/>
        <Button Content="All desciplines" Click="ChangeToDiscipline" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="425,95,0,0" Height="25" FontSize="18"/>
        <Button Content="Add new" Click="AddNewDiscipline" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="620,19,0,0" Height="45" FontSize="18"/>
    </Grid>


</Page>
