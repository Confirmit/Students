
@model Position

<td>
    <input type="checkbox" checked="@Model.Orders.Find(x=>x.Customer.Name == @Context.User.Identity.Name)" id="@Model.Id" onclick="positionChecked(@Model.Id)">
</td>

@await Html.PartialAsync("PositionInfoPartial", Model, ViewData)

<td>
    @Model.Orders.Count
</td>
<td>
    <ul class="list-group list-group-horizontal">

        @for (int i = 0; i < Model.Orders.Count && i <= 3; i++)
        {
            <li class="list-group-item">@Model.Orders[i].Customer.Name</li>
        }
    </ul>
</td>